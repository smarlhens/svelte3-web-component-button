{
  "name": "svelte-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "rollup -c",
    "autobuild": "rollup -c -w",
    "dev": "run-p start:dev autobuild",
    "start": "sirv public --no-clear",
    "start:dev": "sirv public --dev",
    "eslint:check": "eslint . --ext .svelte --ext .ts",
    "eslint:fix": "npm run eslint:check -- --fix",
    "prettier:check": "prettier --check ./**/*.{js,css,scss,html,json,*rc,svelte}",
    "prettier:write": "prettier --write ./**/*.{js,css,scss,html,json,*rc,svelte}",
    "precommit": "lint-staged & npm run build",
    "prepare": "husky install",
    "ts-dev": "tsc --watch",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "devDependencies": {
    "@babel/core": "7.14.8",
    "@commitlint/cli": "12.1.4",
    "@commitlint/config-conventional": "12.1.4",
    "@rollup/plugin-commonjs": "19.0.2",
    "@rollup/plugin-node-resolve": "13.0.4",
    "@rollup/plugin-typescript": "8.2.3",
    "@storybook/addon-actions": "6.3.6",
    "@storybook/addon-essentials": "6.3.6",
    "@storybook/addon-links": "6.3.6",
    "@storybook/addon-svelte-csf": "1.1.0",
    "@storybook/svelte": "6.3.6",
    "@tsconfig/svelte": "2.0.1",
    "@typescript-eslint/eslint-plugin": "4.28.5",
    "@typescript-eslint/parser": "4.28.5",
    "babel-loader": "8.2.2",
    "commitizen": "4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.31.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-svelte3": "3.2.0",
    "husky": "7.0.1",
    "lint-staged": "11.1.1",
    "npm-run-all": "4.1.5",
    "prettier": "2.3.2",
    "prettier-plugin-svelte": "2.3.1",
    "rollup": "2.55.0",
    "rollup-plugin-css-only": "3.1.0",
    "rollup-plugin-livereload": "2.0.5",
    "rollup-plugin-svelte": "7.1.0",
    "rollup-plugin-terser": "7.0.2",
    "svelte": "3.41.0",
    "svelte-loader": "3.1.2",
    "svelte-preprocess": "4.7.4",
    "svelte-windicss-preprocess": "4.0.12",
    "typescript": "4.3.5",
    "windicss-webpack-plugin": "1.4.1"
  },
  "dependencies": {
    "sirv-cli": "1.0.12"
  },
  "engines": {
    "node": ">=12.13.0"
  }
}
