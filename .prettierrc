{
  "printWidth": 120,
  "singleQuote": true,
  "arrowParens": "avoid",
  "endOfLine": "auto",
  "overrides": [
    {
      "files": "*.scss",
      "options": {
        "singleQuote": false
      }
    },
    {
      "files": "*.json",
      "options": {
        "singleQuote": false
      }
    },
    {
      "files": ".*rc",
      "options": {
        "singleQuote": false,
        "parser": "json"
      }
    },
    {
      "files": ".svelte",
      "options": {
        "semi": false,
        "plugins": ["prettier-plugin-svelte"]
      }
    }
  ]
}
